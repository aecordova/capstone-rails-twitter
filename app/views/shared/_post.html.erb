<div class="post row m-0 py-2 border-bottom border-light">
  <div class="badge_pic p-0 text-center col-1">
  <%= link_to image_tag('https://nwsid.net/wp-content/uploads/2015/05/dummy-profile-pic-300x300.png'), post.user %>

  </div>
  <div class="col-11 p-0">
    <div>
      <span class=" h4 font-weight-bold text-white">
        <%= link_to post.user.name || post.user.username, post.user, class:'text-decoration-none link-white'%>
      </span>
      <span>
        <%= post.user.username unless post.user.name.nil? %>
      </span>
      <span class="font-weight-bold text-light">
        - <%= time_ago_in_words(post.created_at) %>
      </span>
    </div>
    <div>
      <%= post.content %>
    </div>
  </div>
</div>
