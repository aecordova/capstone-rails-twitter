<div class="badge_pic p-0 text-center col-1">
  <%= image_tag 'https://nwsid.net/wp-content/uploads/2015/05/dummy-profile-pic-300x300.png' %>
</div>
<div class="p-0 col-11">
  <%= form_with model: Post.new, url: posts_path, local:true do |f| %>
    <div>
      <%= f.text_area :content, placeholder: "Holler something!!", class: 'form-control bg-light text-white', rows:'2' %>
    </div>
    <div class="d-flex justify-content-end">
      <%= f.submit 'Holler!', class: 'btn btn-primary mt-1 rounded-pill'%>
    </div>
  <% end %>
</div>
