
<div class= "d-flex">
  <div class="col-1 pl-2 pr-0 badge_pic">
    <%= image_tag 'https://nwsid.net/wp-content/uploads/2015/05/dummy-profile-pic-300x300.png' %>
  </div>
  <div class="px-1 col-11">
    <%= form_with model: Post.new, url: posts_path, local:true do |f| %>
      <div>
        <%= f.text_area :content, placeholder: "Say something!!", class: 'form-control bg-light text-white', rows:'2' %>
      </div>
      <div class="d-flex justify-content-end">
        <%= f.submit 'SayIt!', class: 'btn btn-outline-success mt-1 rounded-pill'%>
      </div>
    <% end %>
  </div>
</div>
