<div class "d-flex">
  <%= button_tag 'Following', 
               data: { url: follow_path(id: u.id) }, 
               class: "unfollow-btn btn btn-outline-secondary rounded-pill js-following#{ " hide" unless current_user.follows? u }",
               remote: true %>

  <%= button_tag 'Follow', 
               data: { url: follow_path(id: u.id) }, 
               remote: true, 
               class: "follow-btn btn btn-outline-primary rounded-pill js-follow#{ " hide" if current_user.follows? u }"  %>
</div>
