<%= provide(:location, 'login') %>
<div class="pt-3  d-flex flex-column align-items-center">
  <%= image_tag("logo.png", class:"main-img") %>
   <h1 class = 'h1 text-center'>
    <span class="h2 px-2">Welcome to </span>
    <b>SayIt!</b>
  </h1>
  <span>Please enter your login info:</span>
  <div class="my-3 text-center col-md-4 col-sm-6 col-lg-3 ">
    <%= form_with url: login_path, local:true do |f| %>
      <div class="form-group">
        <%= f.text_field 'username', placeholder: "username", class: 'form-control bg-light text-white rounded-pill text-center' %>
        <%= f.password_field 'password', placeholder: "password", class: 'form-control bg-light text-white rounded-pill text-center' %>
      </div>
      <%= f.submit 'Log In!', class: 'btn btn-outline-success rounded-pill'%>
    <% end %>
  </div>
</div>
